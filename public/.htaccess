# Protect sensitive files (but allow .nojekyll for GitHub Pages)
<FilesMatch "^\.((?!nojekyll).)*$">
    Require all denied
</FilesMatch>

# Prevent access to backup and config files
<FilesMatch "\.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist)$">
    Require all denied
</FilesMatch>
